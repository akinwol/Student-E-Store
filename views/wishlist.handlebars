<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-12">
            <h3>
                Your WishList
            </h3>
        </div>

    </div>
    <div class="row">
        <div class="col-4">

        </div>
    </div>

</div>

<div class="container">
    <div class="row">

        <div class="col-8">
            {{#each wishlist}}
            <div class="card product">

                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <img src="https://via.placeholder.com/140x100" alt="">
                        </div>
                        <div class="col-7">
                            <strong> {{name}} </strong> <br> {{description}}
                        </div>
                        <div class="col-2">
                            ${{price}} <br> Stock: {{quantity}}
                            <br>
                            
                            <button type="submit" class="btn btn-primary wishlistButton" data-seller="{{this.UserId}}" data-id="{{this.id}}">Wishlist
                            </button>
                            <button type="submit" class="btn btn-primary message-seller" data-seller="{{this.UserId}}" data-id="{{this.id}}">Message
                            </button>

                        </div>

                    </div>


                </div>

            </div>

            {{/each}}
        </div>