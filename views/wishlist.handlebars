

<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-12">
            <h3 class="pageTitle">
                <i class="far fa-star"></i> Here Is Your Wishlist
            </h3>
        </div>

    </div>
    <div class="row">
        <div class="col-4">

        </div>
    </div>

</div>

<div class="container">
    <div class="row">

        <div class="col-12">
            {{#each wishlist}}
            <div class="card product">

                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <img src="https://via.placeholder.com/140x100" alt="">
                        </div>
                        <div class="col-7">
                            <strong> {{name}} </strong> <br> {{description}}
                        </div>
                        <div class="col-3 priceQuantity">
                            Price: ${{this.price}} <br> Quantity: {{this.quantity}}
                            <br>
                     
                            <button type="submit" class="btn btn-primary message-seller" data-seller="{{this.UserId}}" data-id="{{this.id}}"><i class="far fa-comment-alt"></i>
                            </button>

                        </div>

                    </div>


                </div>

            </div>

            {{/each}}
        </div>