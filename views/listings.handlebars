
<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-12">
            <h3 class="pageTitle">
                <i class="fas fa-list-ul"></i> Your Listings
            </h3>
        </div>

    </div>
    <div class="row">
        <div class="col-4">

        </div>
    </div>

</div>

<div class="container">
    <div class="row">

        <div class="col-12">
            {{#each listings}}
            <div class="card product">

                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <img src="https://via.placeholder.com/140x100" alt="">
                        </div>
                        <div class="col-7">
                            <p><strong> {{name}} </strong></p> 
                            <p class="productDescription">{{description}}</p> 
                            <p class="productCategory"> Category:{{Category.name}}</p>
                        </div>
                        <div class="col-3 priceQuantity">
                            ${{price}} <br> Stock: {{quantity}}
                            <br>
                     
                            {{!-- <button type="submit" class="btn btn-primary message-seller" data-seller="{{this.UserId}}" data-id="{{this.id}}">Message --}}
                            {{!-- </button> --}}

                        </div>

                    </div>


                </div>

            </div>

            {{/each}}
        </div>
